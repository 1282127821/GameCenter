<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="44dp">

    <ImageView
        android:id="@+id/groupTitle_icon"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/outerInterval"
        android:src="@mipmap/icon_group" />

    <ImageView
        android:id="@+id/groupname_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@mipmap/drawable_right" />

    <TextView
        android:id="@+id/groupname_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/group_list_item_imgHeight"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/groupTitle_icon"
        android:gravity="center_vertical"
        android:text="ddddd"
        android:textColor="@color/light_black"
        android:textSize="@dimen/font_size_16sp" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/group_list_item_imgHeight"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/groupname_name"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:text="小组"
        android:textColor="@color/detail_comments"
        android:textSize="@dimen/font_size_16sp" />

</merge>