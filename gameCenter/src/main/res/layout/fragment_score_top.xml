<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey"
    android:orientation="vertical"
    android:paddingEnd="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingStart="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingEnd="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingStart="12dp">

        <LinearLayout
            android:id="@+id/lv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:gravity="center_vertical|end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_center_sign"
                android:layout_width="@dimen/user_center_60"
                android:layout_height="@dimen/user_center_25"
                android:background="@drawable/btn_green_selector"
                android:gravity="center"
                android:text="@string/user_center_sign"
                android:textColor="@color/theme_green"
                android:textSize="@dimen/font13sp" />

            <TextView
                android:id="@+id/user_center_sign_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@string/user_center_sign_count"
                android:textColor="@color/detail_review"
                android:textSize="@dimen/font11sp"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@id/lv_right"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_size_14dp"
            android:paddingTop="@dimen/margin_size_14dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/icon_sign_tip" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:text="@string/point_sign_tip"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/font15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_sign_ad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_12dp"
                android:gravity="start"
                android:lineSpacingExtra="4dp"
                android:textColor="@color/detail_review"
                android:textSize="@dimen/font11sp" />
        </LinearLayout>


    </RelativeLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingEnd="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingStart="12dp"
        android:paddingTop="@dimen/margin_size_14dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/icon_download_tip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:text="@string/point_download_tip"
                android:textColor="@color/light_black"
                android:textSize="@dimen/font15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_download_ad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size_12dp"
            android:gravity="start"
            android:lineSpacingExtra="4dp"
            android:textColor="@color/detail_review"
            android:textSize="@dimen/font11sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_empty_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_20dp"
        android:gravity="center_horizontal"
        android:text="@string/point_game_nodata_tip"
        android:textColor="@color/light_yellow"
        android:textSize="@dimen/font12sp"
        android:visibility="gone" />

</LinearLayout>