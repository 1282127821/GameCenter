<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_convertView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_left_top_right_bottom"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_group"
            android:layout_width="@dimen/group_item_icon_width"
            android:layout_height="@dimen/group_item_icon_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="12dp"
            android:src="@mipmap/btn_main_home_p"/>


        <LinearLayout
            android:id="@+id/ll_top_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_group"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_group_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="爸爸去哪"
                android:textColor="#333"
                android:textSize="@dimen/font16sp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                >

                <TextView
                    android:id="@+id/tv_group_des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/btn_join"
                    android:ellipsize="end"
                    android:gravity="fill_horizontal"
                    android:maxLines="2"
                    android:text="xxxxxxxxxxxxx"
                    android:textColor="#bbb"
                    android:textSize="@dimen/font13sp"
                    />

                <Button
                    android:id="@+id/btn_join"
                    android:layout_width="70dp"
                    android:layout_height="32dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_size_12dp"
                    android:layout_marginRight="@dimen/margin_size_12dp"
                    android:background="@drawable/btn_green_selector"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="加入小组 "
                    android:textColor="@color/theme_green"
                    android:textSize="@dimen/font_size_15sp"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/v_line"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="#dddddd"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/ll_group_heat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_topic_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:drawablePadding="6dp"
                android:drawableRight="@drawable/ic_hot_selector"
                android:text="331"
                android:textColor="#666"
                android:textSize="15sp"/>

        </LinearLayout>

        <View
            android:id="@+id/v_line2"
            android:layout_width="0.5dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:background="#dddddd"/>

        <LinearLayout
            android:id="@+id/ll_group_count"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_number_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:drawablePadding="@dimen/margin_size_6dp"
                android:drawableRight="@drawable/ic_mumber_selector"
                android:text="331"
                android:textColor="#666"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>