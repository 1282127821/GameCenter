<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/network_rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey"
    android:orientation="vertical" >

    <include
        android:id="@+id/network_progress_bar"
        layout="@layout/loading_progress_bar2"
        android:visibility="gone" />

    <include
        android:id="@+id/network_not_network"
        layout="@layout/loading_fail_not_network"
        android:visibility="gone" />

    <include
        android:id="@+id/network_notdata"
        layout="@layout/loading_fail_notdata"
        android:visibility="gone" />

</LinearLayout>