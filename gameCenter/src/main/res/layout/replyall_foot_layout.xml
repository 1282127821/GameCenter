<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

    <TextView
        android:id="@+id/replyAll_foot_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="查看全部评论"
        android:textColor="@color/desktop_changetx_selector" />

    <ProgressBar
        android:id="@+id/replyAll_progressBar"
        style="@style/replyProgressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/replyAll_foot_bt"
        android:layout_alignParentTop="@+id/replyAll_foot_bt"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/outerInterval"
        android:layout_toLeftOf="@+id/replyAll_foot_bt"
        android:clickable="false"
        android:indeterminate="true"
        android:visibility="gone" />

</merge>