<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin_size_20dp"
        android:layout_marginRight="@dimen/margin_size_20dp"
        android:background="@drawable/shape_round_white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/feedback_pop_gallery"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginLeft="@dimen/inInterval"
            android:layout_marginRight="@dimen/inInterval"
            android:paddingLeft="@dimen/margin_size_6dp"
            android:background="@drawable/border_bottom"
            android:gravity="center_vertical|left"
            android:text="从相册选择"
            android:textColor="@color/light_black"
            android:textSize="@dimen/font17sp" />

        <TextView
            android:id="@+id/feedback_pop_photograph"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginLeft="@dimen/inInterval"
            android:layout_marginRight="@dimen/inInterval"
            android:paddingLeft="@dimen/margin_size_6dp"
            android:background="@drawable/border_bottom"
            android:gravity="center_vertical|left"
            android:text="拍照"
            android:textColor="@color/light_black"
            android:textSize="@dimen/font17sp" />

        <TextView
            android:id="@+id/feedback_pop_cancel"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginLeft="@dimen/inInterval"
            android:layout_marginRight="@dimen/inInterval"
            android:paddingLeft="@dimen/margin_size_6dp"
            android:gravity="center_vertical|left"
            android:text="取消"
            android:textColor="@color/light_black"
            android:textSize="@dimen/font17sp" />

    </LinearLayout>


</FrameLayout>