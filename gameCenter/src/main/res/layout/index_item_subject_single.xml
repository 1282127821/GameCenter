<?xml version="1.0" encoding="utf-8"?><!-- 首页 列表中大图 -->
<RelativeLayout android:id="@+id/change_padding"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp">

    <ImageView
        android:id="@+id/bigImageIv"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@mipmap/img_default"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/bigImageIv"
        android:layout_alignTop="@id/bigImageIv"
        android:padding="4dp"
        android:maxEms="4"
        android:maxLines="1"
        android:text="sfddsfsdfasdfsf"
        android:textColor="@color/white"
        android:textSize="@dimen/font13sp"/>

    <cn.lt.game.lib.view.RoundTextView
        android:id="@+id/rtv_item_banner_view"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignBottom="@id/bigImageIv"
        android:layout_alignRight="@id/bigImageIv"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="4dp"
        android:gravity="center"
        android:text="查看"
        android:textColor="@color/white"
        android:textSize="@dimen/font13sp"
        android:visibility="gone"/>

</RelativeLayout>