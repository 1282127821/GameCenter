<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="14dp"
    android:paddingBottom="14dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/mygift_title_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/gift_giftinfoview_img_margin_right"
        android:scaleType="fitXY"
        android:src="@mipmap/img_default_80x80_round" />

    <TextView
        android:id="@+id/mygift_title_txName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/mygift_title_img"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="阴阳师"
        android:textColor="#333333"
        android:textSize="@dimen/font16sp" />

    <TextView
        android:id="@+id/mygift_title_txSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/mygift_title_txName"
        android:layout_below="@id/mygift_title_txName"
        android:layout_marginTop="7dp"
        android:text="1022M"
        android:textColor="#aaaaaa"
        android:textSize="@dimen/font11sp" />

    <TextView
        android:id="@+id/mygift_title_txCountTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_alignTop="@id/mygift_title_txSize"
        android:layout_below="@+id/mygift_title_txName"
        android:layout_toRightOf="@id/mygift_title_txSize"
        android:text="总下载3000万+"
        android:textColor="#aaaaaa"
        android:textSize="@dimen/font11sp" />

    <TextView
        android:id="@+id/mygift_title_packCountTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/mygift_title_txName"
        android:layout_below="@id/mygift_title_txSize"
        android:layout_marginTop="3dp"
        android:text="礼包总数:125"
        android:textColor="#aaaaaa"
        android:textSize="@dimen/font11sp" />

    <TextView
        android:id="@+id/mygift_title_txAlreadyGetCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/mygift_title_packCountTitle"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/mygift_title_packCountTitle"
        android:text="已领取:125"
        android:textColor="#aaaaaa"
        android:textSize="@dimen/font11sp" />

    <ImageView
        android:id="@+id/mygift_title_imgMore"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@mipmap/entergroup_icon_gray" />

</RelativeLayout>