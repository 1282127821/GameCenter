<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="14dp">


    <TextView
        android:id="@+id/tv_gift_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/bt_get_gift"
        android:paddingRight="12dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="阴阳师中秋国庆春节超大礼包哈哈哈sdsdsdgfsdfsdf"
        android:textColor="#333333"
        android:textSize="@dimen/font16sp" />

    <LinearLayout
        android:id="@+id/llt_rest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_gift_name"
        android:layout_marginTop="13dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <!--android:layout_width="@dimen/gift_giftitemview_iv_cursor_layout_width"-->
        <ProgressBar
            android:id="@+id/iv_cursor"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="170dp"
            android:layout_height="5dp"
            android:background="@color/background_grey"
            android:max="1000"
            android:progress="300"
            android:progressDrawable="@drawable/gift_reset" />

        <TextView
            android:id="@+id/tv_reset_git_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:maxLines="1"
            android:text="剩余50%"
            android:textColor="#aaaaaa"
            android:textSize="@dimen/font11sp" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_get_gift"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/get_gift_button_selector"
        android:gravity="center"
        android:text="已领取"
        android:textColor="@color/theme_green"
        android:textSize="@dimen/font13sp" />

    <TextView
        android:id="@+id/tv_gift_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llt_rest"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="14dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="这是礼包介绍这是礼包介绍这是礼包介绍这是礼包介绍这是礼包介绍"
        android:textColor="#aaaaaa"
        android:textSize="@dimen/font11sp" />

    <View
        android:id="@+id/v_buttomLine"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/tv_gift_content"
        android:background="#eeeeee"/>

    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="@dimen/border_width"-->
    <!--android:layout_marginLeft="@dimen/gift_giftitemview_line_margin"-->
    <!--android:layout_marginRight="@dimen/gift_giftitemview_line_margin"-->
    <!--android:background="#dddddd" />-->

</RelativeLayout>