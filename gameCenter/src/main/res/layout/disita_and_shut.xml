<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="50dp">

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="3dp"
            android:drawableTop="@mipmap/network_error"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="10dp"
            android:text="@string/have_banned"
            android:textColor="@color/light_black"
            android:textSize="@dimen/font16sp" />

        <TextView
            android:id="@+id/tv_back_to_home"
            android:layout_width="208dp"
            android:layout_height="36dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/deep_btn_green_selector"
            android:gravity="center"
            android:text="@string/return_game_center"
            android:textColor="@color/white"
            android:textSize="@dimen/font18sp" />
    </LinearLayout>

</RelativeLayout>