<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_round_background"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_size_14dp"
    android:paddingLeft="@dimen/margin_size_16dp"
    android:paddingRight="@dimen/margin_size_16dp">

    <RelativeLayout
        android:id="@+id/toastDialog_titleBar"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/toastDialog_titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text=".aaaaa.."
            android:textColor="@color/theme_green"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/toastDialog_close"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_dialog_close" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/toastDialog_valuelayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/toastDialog_titleBar"
        android:layout_alignRight="@+id/toastDialog_titleBar"
        android:layout_below="@+id/toastDialog_titleBar"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/toastDialog_valueText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dfghdfg"
            android:lineSpacingExtra="@dimen/user_center_7"
            android:textColor="#333333"
            android:textSize="15sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/toastDialog_titleBar"
        android:layout_alignRight="@+id/toastDialog_titleBar"
        android:layout_below="@+id/toastDialog_valuelayout"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/toastDialog_cancel"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btn_cancel_selector"
            android:gravity="center"
            android:text="取消"
            android:textColor="#999999"
            android:textSize="16sp" />

        <Button
            android:id="@+id/toastDialog_failed_get_gfit"
            android:layout_width="96dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@drawable/btn_green_selector"
            android:gravity="center"
            android:text="确定"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/toastDialog_confirm"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/deep_btn_green_selector"
            android:gravity="center"
            android:text="复制并打开"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </RelativeLayout>

</RelativeLayout>