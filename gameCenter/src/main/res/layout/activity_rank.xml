<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_rankRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/status_bar" />

    <cn.lt.game.ui.app.index.widget.SearchView xmlns:app="http://schemas.android.com/apk/res/cn.lt.game"
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titel_bar_muen_icon_hieght"
        app:backgroudColor="@color/theme_green" />

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/indicator"
        style="@style/viewPagerIndicators"
        android:layout_width="match_parent"
        android:layout_height="@dimen/viewpager_indicator_height" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>