<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <cn.lt.game.lib.view.TitleBarView
        android:id="@+id/search_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <cn.lt.game.lib.view.NetWorkStateView
        android:id="@+id/search_netWrokStateView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_action_bar" />

    <cn.lt.game.lib.widget.RefreshAndLoadMoreListView
        android:id="@+id/search_tag_result_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_action_bar"
        />
</RelativeLayout>