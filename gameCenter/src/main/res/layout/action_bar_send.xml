<?xml version="1.0" encoding="utf-8"?>
<!-- 顶部标题栏 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/simple_action_bar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/action_bar_height"
    android:background="@color/theme_green">

    <!-- 后退键 -->

    <ImageButton
        android:id="@+id/back"
        android:layout_width="@dimen/action_bar_height"
        android:layout_height="@dimen/action_bar_height"
        android:layout_centerVertical="true"
        android:background="@drawable/button_background_selector"
        android:padding="@dimen/action_bar_padding"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_back" />

    <Button
        android:id="@+id/send"
        android:layout_width="@dimen/feedback_sendbarHeight"
        android:layout_height="@dimen/user_center_34"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_dark_green_selector"
        android:text="@string/send"
        android:gravity="center"
        android:layout_marginRight="@dimen/margin_size_8dp"
        android:textColor="@color/selector_textcolor_white_gray"
        android:textSize="@dimen/font15sp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/send"
        android:layout_toRightOf="@id/back"
        android:text="游戏中心"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="@dimen/action_bar_title" />

</RelativeLayout>