<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_downloadad_bodyRl"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:background="@android:color/transparent"
     >
     <RelativeLayout 
         android:id="@+id/item_downloadad_logoRl"
         android:layout_width="72dp"
     	android:layout_height="wrap_content"
     	android:layout_centerHorizontal="true"
         >
    <ImageView 
        android:id="@+id/item_downloadad_logoIv"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="7dp"
        android:src="@mipmap/img_default_80x80_round"
        android:scaleType="fitCenter"
        />
    <ImageView 
        android:id="@+id/item_downloadad_checkIv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/downloadad_check_icon"
        android:scaleType="fitCenter"
        />
    </RelativeLayout>
    <TextView 
        android:id="@+id/item_downloadad_nameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_below="@id/item_downloadad_logoRl"
        android:maxLines="1"
        android:gravity="center"
        android:text="游戏的名称游戏的名称游戏的名称游戏的名称"
        android:textSize="@dimen/font_size_14sp"
        android:textColor="@color/light_black"
        />
    
</RelativeLayout>