<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <ImageView
        android:id="@+id/iv_user_photo"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_margin="20dp"
        android:src="@mipmap/user_photo" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-10dp"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@id/iv_user_photo"
        android:text="君爷棒棒哒"
        android:textColor="@color/light_black"
        android:textSize="@dimen/large_font_size" />

    <TextView
        android:id="@+id/tv_user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_user_name"
        android:layout_alignBottom="@+id/iv_user_photo"
        android:layout_marginBottom="6dp"
        android:text="ID:123456"
        android:textColor="@color/light_grey"
        android:textSize="@dimen/middle_font_size" />

    <!-- <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_alignParentBottom="true"
        android:background="@color/stroke_light_grey" /> -->
    
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_below="@+id/iv_user_photo"
        android:background="@color/holo_light_grey" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:orientation="horizontal" >
        
		<LinearLayout
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:orientation="horizontal" >
	        <TextView
	            android:id="@+id/iv_edit"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="14.66dp"
	            android:layout_marginBottom="14.66dp"
	            android:drawableLeft="@mipmap/img_edit"
	            android:drawablePadding="6dp"
	            android:text="@string/edit_info"
	            android:textColor="@color/detail_comments"
	            android:textSize="@dimen/middle_font_size" />
	        
		</LinearLayout>
		
		<View
		    android:layout_width="0.8dp"
		    android:layout_height="match_parent"
		    android:layout_marginBottom="8dp"
		    android:layout_marginTop="8dp"
		    android:background="@color/holo_light_grey" />

		<LinearLayout
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:gravity="center"
		    android:orientation="horizontal" >

		    <TextView
		        android:id="@+id/btn_modify_password"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="14.66dp"
		        android:layout_marginTop="14.66dp"
		        android:drawableLeft="@mipmap/img_modifypass"
		        android:text="@string/modify_password"
		        android:drawablePadding="6dp"
		        android:textColor="@color/detail_comments"
		        android:textSize="@dimen/middle_font_size" />
		</LinearLayout>

		<View
		    android:layout_width="0.8dp"
		    android:layout_height="match_parent"
		    android:layout_marginBottom="8dp"
		    android:layout_marginTop="8dp"
		    android:background="@color/holo_light_grey" />
		
		<LinearLayout
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:gravity="center"
		    android:orientation="horizontal" >

		    <TextView
		        android:id="@+id/btn_change_account"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="14.66dp"
		        android:layout_marginTop="14.66dp"
		        android:drawableLeft="@mipmap/img_changeuser"
		        android:text="@string/change_account"
		        android:drawablePadding="6dp"
		        android:textColor="@color/detail_comments"
		        android:textSize="@dimen/middle_font_size" />
		</LinearLayout>

    </LinearLayout>

</RelativeLayout>