<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape>
            <stroke android:width="0.5px" android:color="#dddddd" />

            <gradient android:endColor="@color/index_item_selector_background" android:startColor="@color/index_item_selector_background" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="0.5px" android:color="#dddddd" />

            <gradient android:endColor="@color/index_item_selector_background" android:startColor="@color/index_item_selector_background" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="1px" android:color="#dddddd" />

            <solid android:color="@android:color/white"/>
        </shape>
    </item>

</selector>